
@{
    ViewBag.Title = "ViewStudent";
}

<h2>ViewStudent</h2>


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div style="width:75%;height:200px;padding:16px;margin:10px;" class="w3-card-8">Test</div>

            <div class="form-group">
                <label for="usr">Name:</label>
                <input type="text" class="form-control" ng-model="Name" id="usrName">
            </div>
            <div class="form-group">
                <label for="usr">Phone:</label>
                <input type="text" class="form-control" id="usrPhone" ng-model="Phone">
            </div>
            <div class="form-group">
                <label for="usr">RegNumber:</label>
                <input type="text" class="form-control" id="RegNumber" ng-model="RegNumber">
            </div>
            <div></div>
        </div>
        <div class="col-md-4">


            <div class="form-group">
                <label for="ddlClass">Class:</label>
                <select class="form-control" id="ddlClass" name="Class">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>

            <div class="form-group">
                <label for="ddlDiv">Div:</label>
                <select class="form-control" id="ddlDiv" name="Div">
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                </select>
            </div>


            <div class="form-group">
                <label for="Gender">Gender:</label>
                <select class="form-control" id="ddlGender">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="form-group">
                <label for="DOB">DOB:</label>
                <input type="date" class="form-control" id="DOB" ng-model="DOB">
            </div>


            @*<div class="form-group" data-provide="datepicker">
                    <div class="input-group date">
                        <label for="DOB">DOB:</label>
                        <input type="text" class="form-control" id="DOB">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                </div>*@



            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="text" class="form-control" id="Email" ng-model="Email">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="ddlBGroup">Blood Grp:</label>

                <select class="form-control" id="ddlBGroup">
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                </select>

            </div>
            <div class="form-group">
                <label for="Status">Status:</label>
                <select id="ddlStatus" class="form-control" name="ddlStatus">
                    <option value="A">Active</option>
                    <option value="I">Inactive</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Status">Address:</label>
                <textarea type="text" class="form-control" rows="6" cols="12" id="Address" ng-model="Address"></textarea>
            </div>

        </div>
    </div>
    <div class="row" style="text-align:right;">
        <button type="button" class="btn btn-primary" id="btnBack" onclick="Back()">Back</button>
     </div>


    <!-- Modal -->

</div>




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/ng-grid/2.0.11/ng-grid.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.2/angular.min.js"></script>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/ng-grid/2.0.11/ng-grid.min.js"></script>

<link href="~/Content/Site.css" rel="stylesheet" />

<script>
    var app = angular.module('myApp', []);
    function Back(){
        window.history.back();
    }
</script>